extends baseEmail

block content
  p Hi #{firstname},
  p Forgot your password? Submit a PATCH request with your new password to #{url}
  p Webpage for this action not yet implememnted.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset your password
  p If you did not initiate this action, please ignore this email!
